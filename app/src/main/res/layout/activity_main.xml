<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <Button
        android:onClick="startMes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Messenger" />

    <Button
        android:onClick="startAIDL"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="AIDL" />

    <Button
        android:onClick="startProvider"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ContentProvider" />

    <Button
        android:onClick="useSocket"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Socket" />

    <Button
        android:onClick="binderPool"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BinderPool" />

    <Button
        android:onClick="binderLocalService"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LocalService" />

    <Button
        android:onClick="customBinder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="自定义Binder" />

    <Button
    android:onClick="broadcast"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Broadcast Receiver" />

</LinearLayout>